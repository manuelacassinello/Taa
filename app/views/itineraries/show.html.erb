<div class="itinerary-show">
  <div class="destination">
    <div id="origin">
      <h4> â›³ From: <%=  @itinerary.origin_destination %></h4>
    </div>
    <div id="final">
      <h4> ðŸ”œ To: <%=  @itinerary.final_destination %></h4>
    </div>
  </div>

  <div class="itinerary-id" id="<%= @itinerary.id %>">
  </div>



  <div class="map-content">

    <div id="simple"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      data-url = "<%= @url %>"
      ></div>
  </div>

  <div class="col-md-6 col-md-offset-1">
    <div class="row">
      <div>
        <% @journeys.each do |journey| %>
          <div>
            <p> <%= journey.transportation %>, <%= (journey.distance/1000).round(1) %> km, <%= (journey.duration/60).round(0) %> mins <%= link_to 'see me', journey_path(journey)%></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
